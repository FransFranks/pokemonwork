<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("../partials/header") %>
</head>

<body class="bg-red-600 text-gray-100 min-h-screen flex flex-col items-center">
    <div class="container mx-auto p-5">
        <h1 class="text-4xl font-bold text-center text-white mb-5">Pokédex</h1>

        <!-- Search Form -->
        <form action="/search" method="GET" class="flex justify-center mb-5">
            <input type="text" name="name" placeholder="Search Pokémon..."
                class="px-4 py-2 border border-gray-300 rounded-l-lg focus:outline-none focus:ring-2 focus:ring-red-400">
            <button type="submit" class="bg-yellow-500 text-black px-4 py-2 rounded-r-lg font-semibold">Search</button>
        </form>

        <!-- Pokémon List -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
            <% pokemonList.forEach(pokemon => { %>
                <a href="/pokemon/<%= pokemon.name %>" class="p-4 bg-white shadow rounded-lg text-center hover:shadow-xl">
                    <p class="text-xl capitalize font-semibold text-red-600">
                        <%= pokemon.name %>
                    </p>
                </a>
            <% }); %>
        </div>
    </div>
    <%- include("../partials/footer") %>
</body>

</html>
